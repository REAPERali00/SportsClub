@model A2.Models.ViewModels.SportClubViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                LastName
            </th>
            <th>
                FirstName
            </th>
            <th>
                BirthDate
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Fans)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    <a asp-action="Index" asp-route-id="@item.ID">Select</a> |
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="EditSubscriptions" asp-route-id="@item.ID">EditSubscriptions</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (Model.SportClubs != null)
{
    <h1>Member of the following SportClubs</h1>
    <table class="table">
        <tr>
            @if (Model.SportClubs.Count() > 0)
            {
                <th>Name</th>
            }
            else
            {
                <th>No subscriptions, must suck to be poor.</th>
            }
        </tr>
        @foreach (var item in Model.SportClubs)
        {
            <tr>
                <td>@item.Title</td>
            </tr>
        }
    </table>
}
