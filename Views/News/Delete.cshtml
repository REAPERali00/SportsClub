@model A2.Models.News

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete add for @Model.SportsClub.Title</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Answer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FileName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FileName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Url)
        </dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Url))
            {
                <img src="@Model.Url" alt="@Model.FileName" style="max-width: 400px;" />
            }
            else
            {
                <p>No image found.</p>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="NewsId" />
        <input type="submit" value="Delete" class="button-red" /> |
        <a class="button-gray" asp-action="Index" asp-route-id="@Model.SportClubId">Back to List</a>
    </form>
</div>
